// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id               Int      @id @default(autoincrement())
  name             String
  description      String
  brand            String
  model            String
  image            String
  rate             Float
  videoReview      String
  tags             String[]
  basePrice        Float
  promotionalPrice Float
  averagePrice     Float
  lowestPrice      Float
  highestPrice     Float
  specifications   Json

  @@map("products")
}
